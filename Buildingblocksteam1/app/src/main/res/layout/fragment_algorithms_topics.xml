<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlgorithmsTopicsFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/bg_removed_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:focusable="true" />

        <Button
            android:id="@+id/sortingalgo"
            android:layout_width="408dp"
            android:layout_height="50dp"
            android:text="Sorting Algorithms"
            android:layout_marginBottom="2dp"
            android:textColor="@color/figma_orange"
            app:layout_constraintBottom_toTopOf="@+id/searching_algo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/searching_algo"
            android:layout_width="408dp"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:text="Searching Algorithms"
            android:textColor="@color/figma_orange"
            app:layout_constraintBottom_toTopOf="@+id/greedy_algo"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/greedy_algo"
            android:layout_width="408dp"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:text="Greedy Algorithms"
            android:textColor="@color/figma_orange"
            app:layout_constraintBottom_toTopOf="@+id/divide_conq_algo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/divide_conq_algo"
            android:layout_width="408dp"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:text="Divide and Conquer"
            android:textColor="@color/figma_orange"
            app:layout_constraintBottom_toTopOf="@+id/dynamic_algo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/dynamic_algo"
            android:layout_width="408dp"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:text="Dynamic Programming"
            android:textColor="@color/figma_orange"
            app:layout_constraintBottom_toTopOf="@+id/backtracking_algo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/backtracking_algo"
            android:layout_width="408dp"
            android:layout_height="50dp"
            android:text="Backtracking"
            android:textColor="@color/figma_orange"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/brute_force_algo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/brute_force_algo"
            android:layout_width="408dp"
            android:layout_height="50dp"
            android:layout_marginBottom="104dp"
            android:text="Brute Force"
            android:textColor="@color/figma_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:text="Algorithms"
            android:textColor="@color/figma_orange"
            android:textSize="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>